.section
  = render 'how_to'
= form_with model: current_user, local: true do |f|
  .row
    .input-field.col.s12
      i.material-icons.prefix
        | explore
      = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {include_blank: "あなたの都道府県を教えてね！"}
      label
        | 都道府県
  .row
    .input-field.col.s12
      i.material-icons.prefix
        | create
      = f.text_field :modify_name, placeholder: '変更後の名前を入力してね！'
  .center.col.s12
    = button_tag :type => "submit", :class =>"btn waves-effect waves-light yellow darken-4" do
      | 保存
      i.material-icons.right
        | send

.section
.section
.section
.section.blue.lighten-5.z-depth-1
  .row
    .col.s10.offset-s1
      .input-field
        textarea.materialize-textarea
          = "FEEL WEATHERを始めました！\u{2600}\n現在の天気をアカウント名に！\u{1F31F}"
      .center.col.s12
        a.btn.waves-effect.waves-light.light-blue.darken-1.pulse href="http://twitter.com/share?url=http://otenki.popapp.me/&text=FEEL WEATHERを始めました！☀️現在の天気をアカウント名に！🌟" target="_blank"
          | ツイート
          i.material-icons.right
            | share

.section
.section
  .row
    .col.s10.offset-s1.m4.offset-m4
      = render 'otenki_table'
